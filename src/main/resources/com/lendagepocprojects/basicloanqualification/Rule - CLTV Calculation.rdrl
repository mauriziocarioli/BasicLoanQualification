package com.lendagepocprojects.basicloanqualification;

import java.lang.Number;

rule "Rule - CLTV Calculation"
	dialect "mvel"
	salience -1
	when
		leadInformation : LeadInformation( propertyValue > 0 )
	then
		System.out.println("===> Firing rule "+drools.getRule().getName());
		modify( leadInformation ) {
				setcLTV( ((leadInformation.eligibleDebt+leadInformation.totalMortgageLiability+500)/leadInformation.propertyValue)*100 )
		}
end
